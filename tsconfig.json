{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "lib": [
      "esnext"
    ],
    "declaration": true,
    "declarationMap": true,
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/*.spec.ts"
  ]
}
